    <% const ingred = recipe[i].ingredients %> 
    <% for(let j = 0; j< ingred.length; j+=1){ %>
      <p><%=ingred[j]  %></p> 
      <% } %>
      
      <h3>Instructions</h3>
      <% const instruc = recipe[i].instructions %> 
    <% for(let k = 0; k< instruc.length; k+=1){ %>
